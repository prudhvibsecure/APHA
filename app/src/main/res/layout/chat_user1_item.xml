<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="5dp">

    <FrameLayout
        android:id="@+id/incoming_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="60dp"
        android:background="@drawable/bubble_case_v"
        android:padding="2dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/timestamp_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="11:15 PM"
            android:textSize="9sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fd_text_rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/ic_forward"
                android:drawablePadding="5dp"
                android:drawableTint="@color/green"
                android:padding="5dp"
                android:text="Forward"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tk_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:autoLink="web"
                android:paddingLeft="5dp"
                android:text="Raj "
                android:singleLine="true"
                android:textSize="9sp"
                android:textColor="@color/green"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/show_icon_r"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_attach"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtMessage_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:autoLink="web"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="Raj"
                    android:textColor="@color/transparent_black"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>